<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
<item
    android:state_focused="false"
      android:state_pressed="true" >
<shape
    android:shape="oval">

    <solid
        android:color="#2D3921"/>

    <size
        android:width="120dp"
        android:height="120dp"/>

    <stroke
        android:width="6dp"
        android:color="#415242"/>
</shape>
</item>

    <!-- default -->
    <item android:state_focused="false"
          android:state_pressed="false">
        <shape
            android:shape="oval">

            <solid
                android:color="#404040"/>

            <size
                android:width="120dp"
                android:height="120dp"/>

            <stroke
                android:width="6dp"
                android:color="#A6A6A6"/>
        </shape>
    </item>
</selector>

