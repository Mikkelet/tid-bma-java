<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartSession">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StartSession">

        <!-- Start Session Title -->
        <TextView
            android:id="@+id/StartSessionTextViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="@string/start_session"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="top"
            />

        <!-- TextView Exercise Provider -->

        <!-- Spinner Exercise Provider -->

        <!-- Activate Button -->

        <TextView
            android:id="@+id/StartSessionExerciseProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="@string/exerciseProvider"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/ExerciseBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/TextToUser"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginTop="28dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:text="@string/userTextProvider"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/text_to_user_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/StartSessionTextViewTitle" />

        <TextView
            android:id="@+id/TextToUserBlock"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/text_to_user_border"
            android:gravity="center"
            android:text="@string/userTextBlock"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ExerciseBox" />

        <RelativeLayout
            android:id="@+id/ExerciseBox"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="56dp"
            android:layout_weight="1"
            android:background="@drawable/exercise_provider_spinner_background"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextToUser">

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingBottom="5dp"
                android:src="@drawable/ic_arrow_drop_down_black_24dp" />

        </RelativeLayout>

        <Spinner
            android:id="@+id/StartSessionSpinnerExerciseProviders"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:spinnerMode="dropdown"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/ExerciseBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ExerciseBox" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>